{
  "name": "@networkpro/csp-endpoint",
  "version": "1.0.3",
  "description": "CSP reporting endpoint for Network Pro Strategies",
  "keywords": [
    "csp",
    "network pro"
  ],
  "license": "CC-BY-4.0 OR GPL-3.0-or-later",
  "author": {
    "name": "Scott Lopez",
    "email": "github@sl.neteng.cc",
    "url": "https://bio.netwk.pro"
  },
  "type": "module",
  "scripts": {
    "dev": "netlify dev",
    "deploy": "netlify deploy",
    "deploy:prod": "netlify deploy --prod",
    "checkout": "npm-run-all test lint:all --sequential format",
    "verify": "npm run checkout",
    "delete": "rm -rf node_modules package-lock.json",
    "clean": "npm run delete && npm cache clean --force && npm install",
    "upgrade": "ncu -u --format group --color",
    "check:updates": "ncu --format group --color",
    "lint": "eslint . --ext .mjs,.js",
    "lint:fix": "eslint . --ext .mjs,.js --fix",
    "lint:md": "npx markdownlint-cli2 \"**/*.{md,markdown}\" \"#node_modules/**\" \"#.netlify/**\"",
    "lint:all": "npm-run-all --parallel lint lint:md",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:watch": "vitest run --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "browserslist": "^4.28.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "markdownlint": "^0.39.0",
    "markdownlint-cli2": "^0.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "vitest": "3.2.4"
  }
}
